@model AuditElement
@{
    /**/

    ViewBag.Title = "New Audit Element";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "AuditElements", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Topic, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Topic, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Text, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Text, new { @class = "form-control", @rows = "5" })
        </div>
    </div>
    <p class="col-md-2 control-label"><b>Choices</b></p>
    <div class="form-group-lg col-md-offset-2">
        <hr />

        <table id="choices" class="table table-condensed table-hover table-responsive">
            <thead>
                <tr>
                    <th>Text</th>
                    <th>Points</th>
                    <th>Display Order</th>
                </tr>
            </thead>
            <tbody>
                @{ Html.RenderAction("_CreateAuditElementChoice");}
            </tbody>
        </table>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value="Add Choice" id="Add" class="btn btn-default" />
            <input type="submit" class="btn btn-default pull-right" value="Submit" />
        </div>
    </div>
}

@section scripts{
    <script>
        var i = 1;
        $("#Add").click(function () {
            $.ajax({
                url: "/AuditElements/_CreateAuditElementChoice",
                data: { i: i },
                success: function (data) {
                    $("#choices tbody").append(data);
                },
                error: function (e) {
                    console.log(e);
                }
            });
            i++;
        })
    </script>
}

